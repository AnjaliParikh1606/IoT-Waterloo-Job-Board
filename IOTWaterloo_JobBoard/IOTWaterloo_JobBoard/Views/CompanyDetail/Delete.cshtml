@model IOTWaterloo_JobBoard.Models.CompanyDetails

@{
    ViewData["Title"] = "Delete Job";
}

<div class="container">
    <div class="container-fluid">
        &nbsp;
        <h3 class="text-center">Are you sure you want to delete this Employer?</h3>
        <hr />
    </div>
</div>

<div class="container">
    <div class="container-fluid">
        <div class="border rounded font-weight-bold text-justify p-4 ">
            <div class="row">

                <dl class="row">
                    <dt class="col-sm-5">
                        @*@Html.DisplayNameFor(model => model.CompanyName)*@ Company Name
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.CompanyName)
                    </dd>
                    <dt class="col-sm-5">
                        @*@Html.DisplayNameFor(model => model.CompanyAddress) Company*@ Address
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.CompanyAddress)
                    </dd>
                    <dt class="col-sm-5">
                        @*@Html.DisplayNameFor(model => model.CompanyCity)*@ City
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.CompanyCity)
                    </dd>
                    <dt class="col-sm-5">
                        @*@Html.DisplayNameFor(model => model.CompanyPostalCode)*@ Postal Code
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.CompanyPostalCode)
                    </dd>
                    <dt class="col-sm-5">
                        @*@Html.DisplayNameFor(model => model.CompanyLandLinePhoneNumber)*@ Phone Number
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.CompanyLandLinePhoneNumber)
                    </dd>
                    <dt class="col-sm-5">
                        @*@Html.DisplayNameFor(model => model.CompanyLandLineExtensionNumber)*@ Extension(If Required)
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.CompanyLandLineExtensionNumber)
                    </dd>
                    <dt class="col-sm-5">
                        @*@Html.DisplayNameFor(model => model.CompanyEmailId)*@ Email Id
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.CompanyEmailId)
                    </dd>
                    <dt class="col-sm-5">
                        @*@Html.DisplayNameFor(model => model.CompanyRegistrationDateTime)*@ Registration DateTime
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.CompanyRegistrationDateTime)
                    </dd>
                    <dt class="col-sm-5">
                        @*@Html.DisplayNameFor(model => model.CompanyContactPerson)*@ Contact Person
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.CompanyContactPerson)
                    </dd>
                    <dt class="col-sm-5">
                        @*@Html.DisplayNameFor(model => model.Role)*@ Company Role
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.Role.PermissionType)
                    </dd>
                    @*<dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.UserNameNavigation)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.UserNameNavigation.UserName)
                        </dd>*@
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="CompanyId" />
                    <input type="submit" value="Delete" class="btn btn-group-lg bg-purple text-white" style="background-color:#341646;" />

                    <button class="btn btn-group-lg bg-purple" style="background-color:#341646;"><a class="text-white text-decoration-none " asp-action="Index">Back to List</a></button>
                </form>
            </div>
        </div>
    </div>
</div>



