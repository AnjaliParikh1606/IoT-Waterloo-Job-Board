@model IOTWaterloo_JobBoard.Models.CompanyDetails
@{
    ViewData["Title"] = "Create";
}
<div>&nbsp;</div>
<div>
    <h4 class="text-center">Company Registration</h4>
</div>
<hr />
<div>
    <h4 class="text-center">@TempData["DisplayMessage"]</h4>
</div>
<div class="container">
    <div class="border rounded font-weight-bold p-4">
        <div class="row ">
            <div class="col-md-11">
                <form asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CompanyName" class="control-label text-justify">Company Name</label>
                        <input asp-for="CompanyName" class="form-control col-8 col-lg-4" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyAddress" class="control-label">Company Street Address</label>
                        <input asp-for="CompanyAddress" class="form-control col-8 col-lg-4" />
                        <span asp-validation-for="CompanyAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyCity" class="control-label">Company City</label>
                        <input asp-for="CompanyCity" class="form-control col-6 col-sm-4" />
                        <span asp-validation-for="CompanyCity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyPostalCode" class="control-label">Postal Code</label>
                        <input asp-for="CompanyPostalCode" class="form-control col-6 col-sm-4" />
                        <span asp-validation-for="CompanyPostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyLandLinePhoneNumber" class="control-label">Phone Number</label>
                        <input asp-for="CompanyLandLinePhoneNumber" class="form-control col-6 col-sm-4" />
                        <span asp-validation-for="CompanyLandLinePhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyLandLineExtensionNumber" class="control-label">Phone Extension Number</label>
                        <input asp-for="CompanyLandLineExtensionNumber" class="form-control col-6 col-sm-4" />
                        <span asp-validation-for="CompanyLandLineExtensionNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyEmailId" class="control-label">Email Address</label>
                        <input asp-for="CompanyEmailId" class="form-control col-6 col-sm-4" />
                        <span asp-validation-for="CompanyEmailId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyRegistrationDateTime" class="control-label">Registration Time</label>
                        <input asp-for="CompanyRegistrationDateTime" class="form-control col-6 col-sm-4" />
                        <span asp-validation-for="CompanyRegistrationDateTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyContactPerson" class="control-label">Contact Person</label>
                        <input asp-for="CompanyContactPerson" class="form-control col-6 col-sm-4" />
                        <span asp-validation-for="CompanyContactPerson" class="text-danger"></span>
                    </div>
                    @*Pass value when integrated with other module*@
                    <div class="form-group">
                        <label asp-for="RoleId" class="control-label">Role</label>
                        <select asp-for="RoleId" class="form-control col-6 col-sm-4" asp-items="ViewBag.RoleId"></select>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="UserName" class="control-label">User Name</label>
                        <select asp-for="UserName" class="form-control col-6 col-sm-4" asp-items="ViewBag.UserName">User Name</select>
                    </div>*@
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn bgColor" />
                    
                        <button class="btn bgColor"> <a class="links" asp-action="Index">Back to List</a></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
  
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
