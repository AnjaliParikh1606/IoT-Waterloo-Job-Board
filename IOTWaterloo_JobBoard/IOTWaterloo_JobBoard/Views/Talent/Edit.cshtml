@model IOTWaterloo_JobBoard.Models.JobDetails

@{
    ViewData["Title"] = "Edit";
}
<div>&nbsp;</div>
<h4 class="text-center">Edit Job Post</h4>
<hr />
<div class="container">
    <div class="container-fluid">
        <div class="border rounded font-weight-bold text-justify p-4 ">
            <div class="row">
                <div class="col-md-11">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="JobId" />
                        <div class="form-group">
                            <label asp-for="JobTitle" class="control-label"></label>
                            <input asp-for="JobTitle" class="form-control" />
                            <span asp-validation-for="JobTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Category" class="control-label">Classification</label>
                            <select asp-for="Category" class="form-control col-5">
                                <option value="Contract">Contract</option>
                                <option value="Intern">Intern</option>
                                <option value="Temporary">Temporary</option>
                                <option value="Volunteer">Volunteer</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Location" class="control-label"></label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Jobtype" class="control-label"></label>
                            <input asp-for="Jobtype" class="form-control" />
                            <span asp-validation-for="Jobtype" class="text-danger"></span>
                        </div>
                        @*<div class="form-group">
                            <label asp-for="MaxSalary" class="control-label"></label>
                            <input asp-for="MaxSalary" class="form-control" />
                            <span asp-validation-for="MaxSalary" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MinSalary" class="control-label"></label>
                            <input asp-for="MinSalary" class="form-control" />
                            <span asp-validation-for="MinSalary" class="text-danger"></span>
                        </div>*@
                    <div class="form-group">
                        <label asp-for="JobDescription" class="control-label">Job Description</label>
                        <textarea asp-for="JobDescription" rows="5" cols="5" class="form-control" placeholder="Write Your Description Of Job Including Requirement"></textarea>
                        <span asp-validation-for="JobDescription" class="text-danger"></span>
                    </div>
                        @*<div class="form-group">
                            <label asp-for="PayPeriod" class="control-label"></label>
                            <input asp-for="PayPeriod" class="form-control" />
                            <span asp-validation-for="PayPeriod" class="text-danger"></span>
                        </div>*@
                        <div class="form-group">
                            <label asp-for="NumberOfPosition" class="control-label"></label>
                            <input asp-for="NumberOfPosition" class="form-control" />
                            <span asp-validation-for="NumberOfPosition" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="JobPostDate" class="control-label"></label>
                            <input asp-for="JobPostDate" class="form-control" />
                            <span asp-validation-for="JobPostDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="JobExpiryDate" class="control-label"></label>
                            <input asp-for="JobExpiryDate" class="form-control" />
                            <span asp-validation-for="JobExpiryDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CompnayId" class="control-label"></label>
                            <select asp-for="CompnayId" class="form-control" asp-items="ViewBag.CompanyName"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary bgColor" /> |
                            <a class="btn bgColor" asp-action="Index">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div>
            
        </div>
    </div>
    </div>
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
