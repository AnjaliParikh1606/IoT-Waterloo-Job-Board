            </div>

            <div class="d-flex w-100 row">
                <p class="card-text col-sm-6">  @Html.DisplayNameFor(model => model.jobDetails.Compnay.CompanyName)</p>
                <p class="card-text col-sm-6">  @Html.DisplayFor(model => model.jobDetails.Compnay.CompanyName)</p>
            </div>

            @*<div class="d-flex w-100">
                    <p class="card-text">  @Html.DisplayNameFor(model => model.jobDetails.PayPeriod)</p>
                    <p class="card-text margin-left">  @Html.DisplayFor(model => model.jobDetails.PayPeriod)</p>
                </div>*@


        </div>
    </div>
    <div>&nbsp; <br /> &nbsp;</div>
    <button type="button" class="btn bgColor btn-lg form-group" data-toggle="modal" data-target="#myModal">
        <span class="bgColor glyphicon glyphicon-eye-open"></span>APPLY
    </button>
    <button type="button" class="btn bgColor btn-lg form-group" data-toggle="modal" data-target="#myModal">
        <a class="text-white text-decoration-none" href="/home/JobSearch">Back to Search</a>
    </button>

    <div>
        @*<a asp-action="Edit" asp-route-id="@Model.jobDetails.JobId">Edit</a>*@
        <div>&nbsp; <br /> &nbsp;</div>
    </div>
</div>
