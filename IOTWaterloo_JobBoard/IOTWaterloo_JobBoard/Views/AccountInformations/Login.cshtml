@model IOTWaterloo_JobBoard.Models.AccountInformation

@{
    ViewData["Title"] = "Login";
}

<div>&nbsp;</div>
<div>
    <h4 class="text-center">Login </h4>
</div>
<hr />
<div>
    <h4 class="text-center">@TempData["DisplayMessage"]</h4>
</div>
<div class="container">
    <div class="border rounded font-weight-bold p-4">
        <div class="row ">
            <div class="col-md-11">
                <form asp-action="Login">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control col-md-6" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" id="ConfirmPassword" class="form-control col-md-6" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="customControlInline">
                            <label class="custom-control-label" for="customControlInline">Remember me</label>
                        </div>
                    </div>
                    <div>
                        <a asp-action="ForgotPassword" asp-controller="AccountInformations">Forgot password?</a>
                    </div>
                    <br />
                    <div>  <p>Don't have an Account? <a asp-area="" asp-controller="CompanyDetail" asp-action="Create">Register</a></p></div>

                    <div class="form-group">
                        <input type="submit" value="Login" class="btn bgColor">
                      
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
