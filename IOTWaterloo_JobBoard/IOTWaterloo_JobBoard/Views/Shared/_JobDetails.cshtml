@model IQueryable<JobDetails>
    <form asp-action="CandidateDetails" asp-controller="Home" class="col-md-12">
        <div class="list-group col-md-12">
            <a href="#" class="list-group-item list-group-item-action flex-column align-items-start active">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Search Result</h5>

                </div>

            </a>

            @if (Model.Count() <= 0)
            {
                <a href="#" class="list-group-item-action flex-column align-items-start">
                    <div class="card text-white bg-dark mb-3">
                        <div class="card-body">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="card-title">No data found</h5>
                                <small></small>
                            </div>

                            <p class="card-text"></p>
                        </div>
                    </div>
                </a>
            }

            @foreach (JobDetails item in Model)
            {
                <a href="/Talent/Details/@item.JobId" class="list-group-item-action flex-column align-items-start">
                    <div class="card text-white bg-dark mb-3">
                        <div class="card-body">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.JobTitle)</h5>
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Compnay.CompanyName)</h5>
                                <small>@Html.DisplayFor(modelItem => item.JobPostDate)</small>
                            </div>

                            <p class="card-text">@Html.DisplayFor(modelItem => item.JobDescription)</p>
                        </div>
                    </div>
                </a>

            }


        </div>
    </form>
<div>&nbsp;<br/> &nbsp;</div>
